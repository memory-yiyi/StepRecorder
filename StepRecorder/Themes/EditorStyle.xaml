<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="T.KeyframeListTitle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>

        <Setter Property="TextBlock.FontSize" Value="18"/>
        <Setter Property="TextBlock.FontWeight" Value="Bold"/>
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
    </Style>

    <Style x:Key="T.KeyframeListContext" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="TextBlock.FontSize" Value="16"/>
    </Style>

    <Style x:Key="T.NoteTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <Style x:Key="T.NoteContext" TargetType="TextBox">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="T.StatusButton" TargetType="Button">
        <Setter Property="Height" Value="32"/>
        <Setter Property="Width" Value="32"/>
        <Setter Property="TextBlock.FontSize" Value="20"/>
    </Style>
</ResourceDictionary>
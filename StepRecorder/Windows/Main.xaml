<Window x:Class="StepRecorder.Windows.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StepRecorder.Windows"
        mc:Ignorable="d"
        Title="{DynamicResource S.Main.Title}" Height="80" Width="500"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <UniformGrid Columns="3" ButtonBase.Click="StartEntry">
        <Button Name="Recorder" Content="{DynamicResource S.Main.Recorder}"/>
        <Button Name="Editor"  Content="{DynamicResource S.Main.Editor}"/>
        <Button Name="Settings" Content="{DynamicResource S.Main.Settings}"/>
    </UniformGrid>
</Window>
